<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="application.FrontEndFXController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="8.0">
               <children>
                  <Label fx:id="lblUserName" text="User Name" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtUserName" promptText="User Name" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="88.0" right="60.0" />
               </VBox.margin>
            </HBox>
            <HBox spacing="16.0">
               <children>
                  <Label fx:id="lblPassword" text="Password" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtPassword" promptText="Password" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="88.0" right="60.0" />
               </VBox.margin>
            </HBox>
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnLogIn" mnemonicParsing="false" onAction="#loginButtonClicked" text="Log In" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closeButtonClicked" text="Close" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="155.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="120.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
